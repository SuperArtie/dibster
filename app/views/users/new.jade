extends ../shared/template
block content
  .container
    #banner.page-header
      .row
        .col-xs-12
          h1#header Dibstr
    .row
      .col-xs-4
      .col-xs-4
        form(role='form', method='post', action='/register', enctype='multipart/form-data')
          fieldset
            h2.legend Register
            .form-group
              label(for='username') Choose Username
              input#username.form-control(type='text', name='username', autofocus=true)
              span.help-block
                | Your username is public.
            .form-group
              label.control-label(for='email') Enter Email
              input#email.form-control(type='text', name='email')
            .form-group
              label.control-label(for='password') Enter Password
              input#password.form-control(type='password',name='password')
            .form-group
              label Select Profile Picture
              input(type='file', name='photo')#photo
            button.btn.btn-md.btn-primary.btn-block(type='submit') Register
      .col-xs-4
  block scripts
